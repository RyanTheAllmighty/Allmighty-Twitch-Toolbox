        link(rel='stylesheet', type='text/css', href='assets/css/libs/nv.d3-1.8.1.min.css')
        link(rel='stylesheet', type='text/css', href='assets/css/app.css')
    body
        nav.navbar.navbar-default.navbar-fixed-top(ng-controller='NavController')
            .container-fluid
                .navbar-header
                    a.navbar-brand(href='#/dashboard') Allmighty Twitch Toolbox
                .collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li(ng-class="{active: $location.path() === '/dashboard'}")
                            a(href='#/dashboard') Dashboard
                        li(ng-class="{active: $location.path() === '/viewers'}")
                            a(href='#/viewers') Viewers
                        li(ng-class="{active: $location.path() === '/followers'}")
                            a(href='#/followers') Followers
                        li(ng-class="{active: $location.path() === '/donations'}")
                            a(href='#/donations') Donations
                        li(ng-class="{active: $location.path() === '/timers'}")
                            a(href='#/timers') Timers
                        li(ng-class="{active: $location.path() === '/tools'}")
                            a(href='#/tools') Tools
                        li(ng-class="{active: $location.path() === '/test'}")
                            a(href='#/test') Test
                        li(ng-class="{active: $location.path() === '/settings'}")
                            a(href='#/settings') Settings
                        li(ng-class="{active: $location.path() === '/help'}")
                            a(href='#/help') Help
        // The container which holds everything and is loaded through Angular
        .container(ng-view='')
