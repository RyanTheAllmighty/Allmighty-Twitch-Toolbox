        script(type='text/javascript', src='app/filters/capitalize.filter.js')

        // Controllers
        script(type='text/javascript', src='app/controllers/navigation.controller.js')
        script(type='text/javascript', src='app/controllers/dashboard.controller.js')
        script(type='text/javascript', src='app/controllers/viewers.controller.js')
        script(type='text/javascript', src='app/controllers/followers.controller.js')
        script(type='text/javascript', src='app/controllers/donations.controller.js')
        script(type='text/javascript', src='app/controllers/timers.controller.js')
        script(type='text/javascript', src='app/controllers/tools.controller.js')
        script(type='text/javascript', src='app/controllers/test.controller.js')
