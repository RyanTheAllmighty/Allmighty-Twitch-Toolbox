doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Default Overlay
        link(href='https://fonts.googleapis.com/css?family=Rubik:400,300', rel='stylesheet', type='text/css')
        link(href='/overlays/css/default.css', rel='stylesheet', type='text/css')
    body
        #container
            .songInfo
                .artwork(v-show='nowPlaying.artwork')
                    img(width='150px', src='data:image/jpeg;base64,{{nowPlaying.artwork}}')
                .info
                    .title(v-text='nowPlaying.title')
                    .strike
                        span By
                    .artist(v-text='nowPlaying.artist')
            .alert
                span.username(v-text='username')
                span.message(v-text='message')
        script(src='/assets/js/libs/jquery-2.1.4.min.js')
        script(src='/assets/js/libs/jquery.transit-0.9.12.min.js')
        script(src='/assets/js/libs/socket.io-1.3.7.min.js')
        script(src='/assets/js/libs/vue-0.12.16.min.js')
        script(src='/assets/js/libs/accounting-0.4.1.min.js')

        script(type='text/javascript').
            window.customData = !{JSON.stringify(data)};

        script(src='/overlays/js/default.js')